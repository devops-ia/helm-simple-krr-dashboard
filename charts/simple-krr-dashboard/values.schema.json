{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "replicaCount": {
      "type": "integer",
      "description": "Number of replicas for the service"
    },
    "image": {
      "type": "object",
      "description": "Image registry configuration",
      "additionalProperties": true,
      "properties": {
        "repository": {
          "type": "string",
          "description": "The repository of the image"
        },
        "pullPolicy": {
          "type": "string",
          "description": "The pull policy for the image"
        },
        "tag": {
          "type": "string",
          "description": "Overrides the image tag whose default is the chart appVersion"
        }
      }
    },
    "strategy": {
      "type": "object",
      "description": "Configure deployment strategy (RollingUpdate, Recreate)",
      "additionalProperties": true
    },
    "nameOverride": {
      "type": "string",
      "description": "String to partially override simple-krr-dashboard.fullname template (will maintain the release name)"
    },
    "fullnameOverride": {
      "type": "string",
      "description": "String to fully override simple-krr-dashboard.fullname template"
    },
    "imagePullSecrets": {
      "type": "array",
      "description": "Docker registry secret names as an array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "serviceAccount": {
      "type": "object",
      "description": "ServiceAccount configuration",
      "additionalProperties": true,
      "properties": {
        "create": {
          "type": "boolean",
          "description": "Specifies whether a service account should be created"
        },
        "automount": {
          "type": "boolean",
          "description": "Automatically mount a ServiceAccount's API credentials"
        },
        "annotations": {
          "type": "object",
          "description": "Annotations to add to the service account",
          "additionalProperties": true
        },
        "name": {
          "type": "string",
          "description": "The name of the service account to use"
        }
      }
    },
    "testConnection": {
      "type": "object",
      "description": "Test connection configuration",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Specifies whether a test connection should be created"
        },
        "repository": {
          "type": "string",
          "description": "The repository of the image"
        },
        "tag": {
          "type": "string",
          "description": "Overrides the image tag"
        }
      }
    },
    "env": {
      "type": "object",
      "description": "Environment variables to configure application",
      "additionalProperties": true
    },
    "envFromConfigMap": {
      "type": "object",
      "description": "Variables from configMap",
      "additionalProperties": true
    },
    "envFromSecrets": {
      "type": "object",
      "description": "Variables from secrets",
      "additionalProperties": true
    },
    "envFromFiles": {
      "type": "array",
      "description": "Variables from files managed by you",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "secrets": {
      "type": "array",
      "description": "Secrets values to create credentials",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "configMaps": {
      "type": "object",
      "description": "ConfigMap values to create configuration files",
      "additionalProperties": true
    },
    "hostAliases": {
      "type": "array",
      "description": "Configure hostAliases for pods",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "initContainers": {
      "type": "array",
      "description": "Configure additional containers",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "args": {
      "type": "array",
      "description": "Configure args",
      "items": {
        "type": "string"
      }
    },
    "command": {
      "type": "array",
      "description": "Configure command",
      "items": {
        "type": "string"
      }
    },
    "service": {
      "type": "object",
      "description": "Kubernetes service to expose Pod",
      "additionalProperties": true,
      "properties": {
        "type": {
          "type": "string",
          "description": "Kubernetes Service type (NodePort, LoadBalancer, ClusterIP, ExternalName)"
        },
        "port": {
          "type": "integer",
          "description": "Kubernetes Service port"
        },
        "targetPort": {
          "type": ["integer", "string"],
          "description": "Pod expose port"
        },
        "protocol": {
          "type": "string",
          "description": "Protocol for the service port"
        },
        "portName": {
          "type": "string",
          "description": "Name for the service port"
        },
        "appProtocol": {
          "type": "string",
          "description": "Application protocol (HTTP, HTTPS, etc.)"
        },
        "nodePort": {
          "type": "integer",
          "description": "NodePort port (only when type is NodePort or LoadBalancer)"
        },
        "clusterIP": {
          "type": "string",
          "description": "Specific cluster IP (use 'None' for headless service)"
        },
        "clusterIPs": {
          "type": "array",
          "description": "List of cluster IPs for dual-stack",
          "items": {
            "type": "string"
          }
        },
        "externalIPs": {
          "type": "array",
          "description": "External IPs for the service",
          "items": {
            "type": "string"
          }
        },
        "loadBalancer": {
          "type": "object",
          "description": "LoadBalancer specific configuration",
          "additionalProperties": true
        },
        "externalName": {
          "type": "string",
          "description": "External name for ExternalName type service"
        },
        "externalTrafficPolicy": {
          "type": "string",
          "description": "External traffic policy (Local or Cluster)"
        },
        "internalTrafficPolicy": {
          "type": "string",
          "description": "Internal traffic policy (Local or Cluster)"
        },
        "healthCheckNodePort": {
          "type": "integer",
          "description": "Health check node port"
        },
        "publishNotReadyAddresses": {
          "type": "boolean",
          "description": "Publish not ready addresses"
        },
        "sessionAffinity": {
          "type": "string",
          "description": "Session affinity (None or ClientIP)"
        },
        "sessionAffinityConfig": {
          "type": "object",
          "description": "Session affinity configuration",
          "additionalProperties": true
        },
        "ipFamilies": {
          "type": "array",
          "description": "IP families (IPv4, IPv6)",
          "items": {
            "type": "string"
          }
        },
        "ipFamilyPolicy": {
          "type": "string",
          "description": "IP family policy (SingleStack, PreferDualStack, RequireDualStack)"
        },
        "trafficDistribution": {
          "type": "string",
          "description": "Traffic distribution (PreferClose)"
        },
        "labels": {
          "type": "object",
          "description": "Additional labels for the service",
          "additionalProperties": true
        },
        "annotations": {
          "type": "object",
          "description": "Annotations for the service",
          "additionalProperties": true
        },
        "extraPorts": {
          "type": "array",
          "description": "Pod extra ports",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "networkPolicy": {
      "type": "object",
      "description": "NetworkPolicy configuration",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable or disable NetworkPolicy"
        },
        "policyTypes": {
          "type": "array",
          "description": "Policy types",
          "items": {
            "type": "string"
          }
        },
        "ingress": {
          "type": "array",
          "description": "Ingress rules",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "egress": {
          "type": "array",
          "description": "Egress rules",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "lifecycle": {
      "type": "object",
      "description": "Configure lifecycle hooks",
      "additionalProperties": true
    },
    "terminationGracePeriodSeconds": {
      "type": "integer",
      "description": "Configure Pod termination grace period"
    },
    "livenessProbe": {
      "type": "object",
      "description": "Configure liveness checker",
      "additionalProperties": true
    },
    "livenessProbeCustom": {
      "type": "object",
      "description": "Custom livenessProbe",
      "additionalProperties": true
    },
    "readinessProbe": {
      "type": "object",
      "description": "Configure readinessProbe checker",
      "additionalProperties": true
    },
    "readinessProbeCustom": {
      "type": "object",
      "description": "Custom readinessProbe",
      "additionalProperties": true
    },
    "startupProbe": {
      "type": "object",
      "description": "Configure startupProbe checker",
      "additionalProperties": true
    },
    "startupProbeCustom": {
      "type": "object",
      "description": "Custom startupProbe",
      "additionalProperties": true
    },
    "annotations": {
      "type": "object",
      "description": "Configure annotations on Deployment",
      "additionalProperties": true
    },
    "labels": {
      "type": "object",
      "description": "Configure labels on Deployment",
      "additionalProperties": true
    },
    "podAnnotations": {
      "type": "object",
      "description": "Configure annotations on Pods",
      "additionalProperties": true
    },
    "podLabels": {
      "type": "object",
      "description": "Configure labels on Pods",
      "additionalProperties": true
    },
    "podSecurityContext": {
      "type": "object",
      "description": "Defines privilege and access control settings for a Pod",
      "additionalProperties": true
    },
    "securityContext": {
      "type": "object",
      "description": "Defines privilege and access control settings for a Container",
      "additionalProperties": true
    },
    "ingress": {
      "type": "object",
      "description": "Ingress configuration to expose app",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "className": {
          "type": "string"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": true
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "tls": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "resources": {
      "type": "object",
      "description": "Resources limits and requested",
      "additionalProperties": true
    },
    "podDisruptionBudget": {
      "type": "object",
      "description": "Pod Disruption Budget",
      "additionalProperties": true
    },
    "autoscaling": {
      "type": "object",
      "description": "Autoscaling with CPU or memory utilization percentage",
      "additionalProperties": true
    },
    "volumes": {
      "type": "array",
      "description": "Additional volumes on the output Deployment definition",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "volumeMounts": {
      "type": "array",
      "description": "Additional volumeMounts on the output Deployment definition",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "persistentVolume": {
      "type": "object",
      "description": "Persistent Volume configuration",
      "additionalProperties": true
    },
    "nodeSelector": {
      "type": "object",
      "description": "Node labels for pod assignment",
      "additionalProperties": true
    },
    "tolerations": {
      "type": "array",
      "description": "Tolerations for pod assignment",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "affinity": {
      "type": "object",
      "description": "Affinity for pod assignment",
      "additionalProperties": true
    },
    "topologySpreadConstraints": {
      "type": "array",
      "description": "Control how Pods are spread across your cluster",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "dnsConfig": {
      "type": "object",
      "description": "Configure DNS",
      "additionalProperties": true
    },
    "dnsPolicy": {
      "type": "string",
      "description": "Configure DNS policy (ClusterFirst, Default, ClusterFirstWithHostNet, None)"
    },
    "job": {
      "type": "object",
      "description": "CronJob configuration",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable or disable the cronjob"
        },
        "schedule": {
          "type": "string",
          "description": "The schedule in Cron format"
        },
        "krrExtraArguments": {
          "type": "string",
          "description": "Extra arguments to pass to krr"
        },
        "kubectlVersion": {
          "type": "string",
          "description": "Version of kubectl to install (use 'stable' for latest stable version)"
        },
        "concurrencyPolicy": {
          "type": "string",
          "description": "Concurrency policy for the cronjob"
        },
        "successfulJobsHistoryLimit": {
          "type": "integer",
          "description": "Number of successful jobs to keep"
        },
        "failedJobsHistoryLimit": {
          "type": "integer",
          "description": "Number of failed jobs to keep"
        },
        "completions": {
          "type": "integer",
          "description": "Number of completions required for the job"
        },
        "parallelism": {
          "type": "integer",
          "description": "Number of parallel jobs"
        },
        "completionMode": {
          "type": "string",
          "description": "Completion mode for the job"
        },
        "backoffLimit": {
          "type": "integer",
          "description": "Number of retries before marking job as failed"
        },
        "backoffLimitPerIndex": {
          "type": "integer",
          "description": "Number of retries per index before marking job as failed"
        },
        "maxFailedIndexes": {
          "type": ["integer", "null"],
          "description": "Maximum number of failed indexes"
        },
        "restartPolicy": {
          "type": "string",
          "description": "Restart policy for the job"
        },
        "terminationGracePeriodSeconds": {
          "type": "integer",
          "description": "Termination grace period in seconds"
        },
        "image": {
          "type": "object",
          "description": "Image configuration for the job",
          "additionalProperties": true
        },
        "args": {
          "type": "array",
          "description": "Arguments for the job container",
          "items": {
            "type": "string"
          }
        },
        "command": {
          "type": "array",
          "description": "Command for the job container",
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": "object",
          "description": "Environment variables for the job",
          "additionalProperties": true
        },
        "envFromConfigMap": {
          "type": "object",
          "description": "Variables from configMap",
          "additionalProperties": true
        },
        "envFromSecrets": {
          "type": "object",
          "description": "Environment variables from secrets",
          "additionalProperties": true
        },
        "envFromFiles": {
          "type": "array",
          "description": "Variables from files managed by you",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "resources": {
          "type": "object",
          "description": "Resource limits and requests for the job",
          "additionalProperties": true
        },
        "volumeMounts": {
          "type": "array",
          "description": "Volume mounts for the job",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "volumes": {
          "type": "array",
          "description": "Volumes for the job",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "nodeSelector": {
          "type": "object",
          "description": "Node selector for the job",
          "additionalProperties": true
        },
        "tolerations": {
          "type": "array",
          "description": "Tolerations for the job",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "affinity": {
          "type": "object",
          "description": "Affinity for the job",
          "additionalProperties": true
        },
        "annotations": {
          "type": "object",
          "description": "Annotations for the job",
          "additionalProperties": true
        },
        "labels": {
          "type": "object",
          "description": "Labels for the job",
          "additionalProperties": true
        },
        "podAnnotations": {
          "type": "object",
          "description": "Pod annotations for the job",
          "additionalProperties": true
        },
        "podLabels": {
          "type": "object",
          "description": "Pod labels for the job",
          "additionalProperties": true
        },
        "dnsConfig": {
          "type": "object",
          "description": "Configure DNS",
          "additionalProperties": true
        },
        "dnsPolicy": {
          "type": "string",
          "description": "Configure DNS policy"
        }
      }
    }
  }
}
